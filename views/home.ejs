<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Available Apartments</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/css/styles.css">
</head>

<body>

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">Apartment Rental</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
				aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto">
					<% if (!isAuthenticated) { %>
						<li class="nav-item">
							<a class="nav-link" href="/login">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/register">Register</a>
						</li>
						<% } else { %>
							<li class="nav-item">
								<span class="navbar-text">Hello, <%= username %>!</span>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/logout">Logout</a>
							</li>
							<% if (isAdmin) { %>
								<li class="nav-item">
									<a class="nav-link" href="/admin/apartment/new-apartment">New Apartment</a>
								</li>
								<% } %>
									<% } %>
										<!-- Dark Mode Toggle -->
										<li class="nav-item">
											<div id="darkModeToggle" class="dark-mode-toggle">
												<img src="https://cdn-icons-png.flaticon.com/512/3073/3073665.png"
													alt="Toggle Dark Mode" width="32px">
											</div>
										</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container mt-5 fade-in">
		<!-- Search Form -->
		<h1 class="mb-4 text-center">Search Apartments</h1>
		<form action="/search" method="GET" class="mb-5">
			<div class="row justify-content-center">
				<div class="col-md-4">
					<input type="number" class="form-control" name="maxPrice" placeholder="Max Price (USD)" required>
				</div>
				<div class="col-md-2">
					<button type="submit" class="btn btn-primary">Search</button>
				</div>
			</div>
		</form>

		<!-- Available Apartments -->
		<h2 class="mb-4 text-center">Available Apartments</h2>
		<div class="row">
			<% apartments.forEach(apartment=> { %>
				<div class="col-md-4 mb-4 d-flex align-items-stretch">
					<div class="card">
						<img src="<%= apartment.mainPhoto %>" class="card-img-top" alt="<%= apartment.title %>">
						<div class="card-body">
							<h5 class="card-title">
								<%= apartment.title %>
							</h5>
							<p class="card-text">Price per night: $<%= apartment.price %>
							</p>
							<p class="card-text">Size: <%= apartment.size %> sqm</p>
							<p class="card-text">Max Persons: <%= apartment.maxPersons %>
							</p>
							<a href="/apartment/<%= apartment._id %>" class="btn btn-primary">View Details</a>

							<!-- Admin actions -->
							<% if (isAdmin) { %>
								<a href="/admin/apartment/<%= apartment._id %>/edit"
									class="btn btn-secondary mt-2">Edit</a>
								<form action="/admin/apartment/<%= apartment._id %>" method="POST"
									style="display:inline;">
									<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-danger">Delete</button>
								</form>


								<% } %>
						</div>
					</div>
				</div>
				<% }) %>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/main.js"></script>

</body>

</html>