<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Available Apartments</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
	<!-- Navigation Bar -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top shadow-sm">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">Apartment Rental</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
				aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto">
					<% if (!isAuthenticated) { %>
						<li class="nav-item">
							<a class="nav-link" href="/login">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/register">Register</a>
						</li>
						<% } else { %>
							<li class="nav-item">
								<span class="navbar-text">Hello, <%= username %>!</span>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/logout">Logout</a>
							</li>
							<% if (isAdmin) { %>
								<li class="nav-item">
									<a class="nav-link btn btn-outline-primary"
										href="/admin/apartment/new-apartment">New Apartment</a>
								</li>
								<% } %>
									<% } %>
										<li class="nav-item">
											<div id="darkModeToggle" class="dark-mode-toggle">
												<img src="https://cdn-icons-png.flaticon.com/512/3073/3073665.png"
													alt="Toggle Dark Mode" width="32px">
											</div>
										</li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Search Form -->
	<div class="container mt-5 fade-in">
		<h1 class="mb-4 text-center">Search Apartments</h1>
		<form action="/search" method="GET" class="mb-5">
			<div class="row justify-content-center g-2">
				<div class="col-md-3">
					<input type="number" class="form-control" name="maxPrice" placeholder="Max Price (USD)">
				</div>
				<div class="col-md-3">
					<select id="province" name="province" class="form-control">
						<option value="">Select Province</option>
						<% provinces.forEach(province=> { %>
							<option value="<%= province %>">
								<%= province %>
							</option>
							<% }); %>
					</select>
				</div>
				<div class="col-md-3">
					<select id="city" name="city" class="form-control" disabled>
						<option value="">Select City</option>
					</select>
				</div>
				<div class="col-md-3">
					<input type="number" class="form-control" name="maxPersons" placeholder="Number of Persons">
				</div>
				<div class="col-md-3">
					<input type="date" class="form-control" name="availableDate" placeholder="Available Date">
				</div>
				<div class="col-md-3">
					<select name="sortOrder" class="form-control">
						<option value="">Sort by</option>
						<option value="price_asc">Price (Low to High)</option>
						<option value="price_desc">Price (High to Low)</option>
						<option value="capacity_asc">Capacity (Low to High)</option>
						<option value="capacity_desc">Capacity (High to Low)</option>
					</select>
				</div>
				<div class="col-md-2">
					<button type="submit" class="btn btn-primary w-100">Search</button>
				</div>
			</div>
		</form>

		<!-- Available Apartments -->
		<h2 class="mb-4 text-center">Available Apartments</h2>
		<div class="row grid-layout">
			<% apartments.forEach(apartment=> { %>
				<div class="col-md-4 mb-4 d-flex align-items-stretch fade-in-card">
					<div class="card apartment-card">
						<img data-src="<%= apartment.mainPhoto %>" class="card-img-top lazy"
							alt="<%= apartment.title %>">
						<div class="card-body">
							<h5 class="card-title">
								<%= apartment.title %>
							</h5>
							<p class="card-text">Price per night: $<%= apartment.price %>
							</p>
							<p class="card-text">Size: <%= apartment.size %> sqm</p>
							<p class="card-text">Max Persons: <%= apartment.maxPersons %>
							</p>

							<!-- Services with Icons -->
							<div class="services">
								<% if (apartment.services.wifi) { %>
									<img src="/icons/wifi-icon.png" alt="WiFi" title="WiFi" width="24px">
									<% } %>
										<% if (apartment.services.airConditioner) { %>
											<img src="/icons/ac-icon.png" alt="Air Conditioner" title="Air Conditioner"
												width="24px">
											<% } %>
												<% if (apartment.services.kitchen) { %>
													<img src="/icons/kitchen-icon.png" alt="Kitchen" title="Kitchen"
														width="24px">
													<% } %>
														<% if (apartment.services.disability) { %>
															<img src="/icons/disability-icon.png"
																alt="Disability Access" title="Disability Access"
																width="24px">
															<% } %>
																<% if (apartment.services.heater) { %>
																	<img src="/icons/heater-icon.png" alt="Heater"
																		title="Heater" width="24px">
																	<% } %>
																		<% if (apartment.services.tv) { %>
																			<img src="/icons/tv-icon.png" alt="TV"
																				title="TV" width="24px">
																			<% } %>
							</div>

							<a href="/apartment/<%= apartment._id %>" class="btn btn-primary mb-2 w-100">View
								Details</a>
							<% if (isAdmin) { %>
								<a href="/admin/apartment/<%= apartment._id %>/edit"
									class="btn btn-secondary mb-2 w-100">Edit</a>
								<form action="/admin/apartment/<%= apartment._id %>/delete" method="POST">
									<button type="submit" class="btn btn-danger w-100">Delete</button>
								</form>
								<% } %>
						</div>
					</div>
				</div>
				<% }); %>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/main.js"></script>
</body>

</html>