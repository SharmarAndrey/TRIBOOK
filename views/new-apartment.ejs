<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Add New Apartment</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
	<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">Apartment Rental</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
				aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto">
					<% if (!isAuthenticated) { %>
						<li class="nav-item">
							<a class="nav-link" href="/login">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/register">Register</a>
						</li>
						<% } else { %>
							<li class="nav-item">
								<span class="navbar-text">Hello, <%= username %>!</span>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/logout">Logout</a>
							</li>
							<% if (isAdmin) { %>
								<li class="nav-item">
									<a class="nav-link" href="/admin/apartment/new-apartment">New Apartment</a>
								</li>
								<% } %>
									<% } %>
										<!-- Dark Mode Toggle -->
										<li class="nav-item">
											<div id="darkModeToggle" class="dark-mode-toggle">
												<img src="https://cdn-icons-png.flaticon.com/512/3073/3073665.png"
													alt="Toggle Dark Mode" width="32px">
											</div>
										</li>
				</ul>
			</div>
		</div>
	</nav>
	<main class="container">
		<h1>Add New Apartment</h1>
		<form action="/admin/apartment/new-apartment" method="POST">
			<label for="title">Apartment Title</label>
			<input type="text" id="title" name="title" required placeholder="Enter apartment title">

			<label for="description">Description</label>
			<textarea id="description" name="description" required placeholder="Enter apartment description"></textarea>

			<label for="rules">Rules</label>
			<textarea id="rules" name="rules" required placeholder="Enter apartment rules"></textarea>

			<label for="rooms">Number of Rooms</label>
			<input type="number" id="rooms" name="rooms" required placeholder="Enter number of rooms" min="1">

			<label for="beds">Number of Beds</label>
			<input type="number" id="beds" name="beds" required placeholder="Enter number of beds" min="1">

			<label for="bathrooms">Number of Bathrooms</label>
			<input type="number" id="bathrooms" name="bathrooms" required placeholder="Enter number of bathrooms"
				min="1">

			<label for="photos">Photo URLs (comma separated)</label>
			<input type="text" id="photos" name="photos" required placeholder="Enter photo URLs separated by commas">

			<label for="mainPhoto">Main Photo URL</label>
			<input type="url" id="mainPhoto" name="mainPhoto" required placeholder="Enter URL of the main photo">

			<label for="price">Price per Day</label>
			<input type="number" id="price" name="price" required placeholder="Enter price per night" min="1">

			<label for="maxPersons">Max Persons</label>
			<input type="number" id="maxPersons" name="maxPersons" required placeholder="Enter max persons" min="1">

			<label for="size">Size (in sqm)</label>
			<input type="number" id="size" name="size" required placeholder="Enter size in square meters" min="1">

			<fieldset>
				<legend>Services</legend>
				<label for="wifi"><input type="checkbox" id="wifi" name="wifi"> WiFi</label>
				<label for="airConditioner"><input type="checkbox" id="airConditioner" name="airConditioner"> Air
					Conditioner</label>
				<label for="kitchen"><input type="checkbox" id="kitchen" name="kitchen"> Kitchen</label>
				<label for="disability"><input type="checkbox" id="disability" name="disability"> Disability
					Access</label>
				<label for="heater"><input type="checkbox" id="heater" name="heater"> Heater</label>
				<label for="tv"><input type="checkbox" id="tv" name="tv"> TV</label>
			</fieldset>

			<label for="province">Province</label>
			<input type="text" id="province" name="province" required placeholder="Enter province">

			<label for="city">City</label>
			<input type="text" id="city" name="city" required placeholder="Enter city">

			<label for="gps">GPS Coordinates</label>
			<input type="text" id="gps" name="gps" placeholder="Enter GPS coordinates">

			<fieldset>
				<legend>Available Dates</legend>
				<label for="startDate">Start Date:</label>
				<input type="date" id="startDate" name="startDate">

				<label for="endDate">End Date:</label>
				<input type="date" id="endDate" name="endDate">

				<button type="button" id="addDateRange">Add Date Range</button>

				<ul id="dateRangesList"></ul>
				<input type="hidden" id="availableDates" name="availableDates">
			</fieldset>

			<button type="submit">Add Apartment</button>
		</form>
	</main>

	<script>
		document.getElementById('addDateRange').addEventListener('click', function () {
			const startDate = document.getElementById('startDate').value;
			const endDate = document.getElementById('endDate').value;

			if (startDate && endDate) {
				const dateRangesList = document.getElementById('dateRangesList');
				const listItem = document.createElement('li');
				listItem.textContent = `${startDate} to ${endDate}`;
				dateRangesList.appendChild(listItem);

				const availableDatesInput = document.getElementById('availableDates');
				const currentDates = availableDatesInput.value ? JSON.parse(availableDatesInput.value) : [];
				currentDates.push({ startDate, endDate });
				availableDatesInput.value = JSON.stringify(currentDates);

				document.getElementById('startDate').value = '';
				document.getElementById('endDate').value = '';
			} else {
				alert('Please select both a start date and an end date.');
			}
		});
	</script>
</body>

</html>