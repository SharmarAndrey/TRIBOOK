<head></head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>TRIBOOK Reservations</title>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Custom CSS -->
<link rel="stylesheet" href="/css/styles.css">

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<body class="d-flex flex-column min-vh-100">
	<%- include('./partials/navbar') %>

		<div class="container mt-5 flex-grow-1">
			<h1 class="text-center">Reservation Details</h1>

			<div class="card p-4">
				<div class="mb-3">
					<h3>Email клиента:</h3>
					<p>
						<%= reservation.email %>
					</p>
				</div>
				<div class="mb-3">
					<h3>Apartment:</h3>
					<% if (reservation.apartment) { %>
						<p>
							<%= reservation.apartment.title %>
						</p>
						<% } else { %>
							<p><em>No Apartment Linked</em></p>
							<% } %>
				</div>
				<div class="mb-3">
					<h3>Start Date:</h3>
					<p>
						<%= new Date(reservation.startDate).toLocaleDateString() %>
					</p>
				</div>
				<div class="mb-3">
					<h3>End Date:</h3>
					<p>
						<%= new Date(reservation.endDate).toLocaleDateString() %>
					</p>
				</div>

				<!-- Кнопка для связи с клиентом через email -->
				<a href="mailto:<%= reservation.email %>" class="btn btn-primary">Contact Client</a>

				<!-- Кнопка для возврата к списку бронирований -->
				<a href="/admin/reservations" class="btn btn-secondary">Back to Reservations</a>
			</div>
		</div>

		<%- include('./partials/footer') %>
			<!-- Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

			<!-- Custom JS -->
			<script src="/js/main.js"></script>
</body>